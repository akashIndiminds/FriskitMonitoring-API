  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Set current date if not already set",
          "if (!pm.collectionVariables.get('currentDate')) {",
          "  const today = new Date().toISOString().split('T')[0];",
          "  pm.collectionVariables.set('currentDate', today);",
          "}",
          "",
          "// Log request info",
          "console.log('üìä Making request to:', pm.request.url.toString());",
          "console.log('üìÖ Using date:', pm.collectionVariables.get('currentDate'));"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Basic response validation",
          "pm.test('Status code should be successful', function () {",
          "  pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
          "});",
          "",
          "pm.test('Response should be JSON', function () {",
          "  pm.expect(pm.response.headers.get('Content-Type')).to.include('json');",
          "});",
          "",
          "pm.test('Response should have success field', function () {",
          "  const responseJson = pm.response.json();",
          "  pm.expect(responseJson).to.have.property('success');",
          "});",
          "",
          "// Log response summary",
          "const responseJson = pm.response.json();",
          "console.log('‚úÖ Response status:', responseJson.success ? 'SUCCESS' : 'FAILED');",
          "if (responseJson.data && responseJson.data.dashboard) {",
          "  console.log('üìä Dashboard stats:', responseJson.data.dashboard.statistics);",
          "}"
        ]
      }
    }
  ]
